<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/changepro_header_l"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            layout="@layout/header" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changepro_main_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/cp_sub_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_changeprotitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Change Profile"
                android:textColor="#1284E9"
                android:textSize="17sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cp_dev1_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/devider_event_detail"
            android:contentDescription="@null"
            android:paddingTop="3dp" />

        <LinearLayout
            android:id="@+id/changepro_sub_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="10dp" >

            <com.fipl.kenjc.Utils.MyEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtbox_big"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <com.fipl.kenjc.Utils.MyEditText
                android:id="@+id/et_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtbox_big"
                android:hint="Enter Mail Address"
                android:inputType="textEmailAddress"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <com.fipl.kenjc.Utils.MyEditText
                android:id="@+id/et_phnno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtbox_big"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changepro_sub_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/changepro_sub_ll2_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="left|center_horizontal"
                android:orientation="horizontal"
                android:padding="8dp" >

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/opt_btn_unselected"
                    android:padding="3dp"
                    android:text="Male"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/opt_btn_unselected"
                    android:gravity="right|center_vertical"
                    android:padding="5dp"
                    android:text="Female"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/bt_changepro_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bdate_txtbox"
                    android:gravity="left|center_vertical"
                    android:hint="Select Birth Date"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changepro_sub_ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_changepro_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/submit_cancel_btn"
                android:gravity="center"
                android:padding="5dp"
                android:text="Submit"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/bt_changepro_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/submit_cancel_btn"
                android:gravity="center"
                android:padding="5dp"
                android:text="Cancel"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>