<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/more_header_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <include
            android:id="@+id/moreview_header_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            layout="@layout/header"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_main_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/more_sub_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_moretitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="More"
                android:textColor="#1284E9"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_sub_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/more_sub_ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#D5D5D5"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_noti_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@drawable/next_icon"
                    android:padding="8dp"
                    android:text="Notification Settings"
                    android:textColor="#3184DC" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_sub_ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#D5D5D5"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_noti_changeprofile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/next_icon"
                    android:padding="8dp"
                    android:text="Change Profile"
                    android:textColor="#3184DC" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_sub_ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#D5D5D5"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_noti_changepwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/next_icon"
                    android:padding="8dp"
                    android:text="Change Password"
                    android:textColor="#3184DC" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_sub_ll8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#D5D5D5"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_noti_busreservation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Bus Reservation"
                    android:textColor="#3184DC" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_sub_ll7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#D5D5D5"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_noti_calender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="KEN&apos;s Calendar"
                    android:textColor="#3184DC" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_sub_ll6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#D5D5D5"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_noti_logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/next_icon"
                    android:padding="8dp"
                    android:text="Logout"
                    android:textColor="#3184DC" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_footer_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <view
            android:id="@+id/footerlinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            class="com.bloo.kenjc.Footer"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>