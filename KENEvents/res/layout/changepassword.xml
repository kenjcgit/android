<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/changpwd_header_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            layout="@layout/header" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changepwd_main_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_changeprotitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Change Password"
                android:textColor="#1284E9"
                android:textSize="17sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cp_dev1_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/devider_event_detail"
            android:contentDescription="@null"
            android:paddingTop="3dp" />

        <LinearLayout
            android:id="@+id/changepwd_sub_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="10dp" >

            <com.fipl.kenjc.Utils.MyEditText
                android:id="@+id/et_curntpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtbox_big"
                android:hint="Enter Current Password"
                android:inputType="textPassword"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <com.fipl.kenjc.Utils.MyEditText
                android:id="@+id/et_newpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtbox_big"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <com.fipl.kenjc.Utils.MyEditText
                android:id="@+id/et_renwpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtbox_big"
                android:hint="Re-Enter New Password"
                android:inputType="textPassword"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changepwd_sub_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_changepwd_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/submit_cancel_btn"
                android:gravity="center"
                android:padding="5dp"
                android:text="Submit"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/bt_changepwd_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/submit_cancel_btn"
                android:gravity="center"
                android:padding="5dp"
                android:text="Cancel"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>